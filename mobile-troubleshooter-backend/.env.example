# Example environment configuration for Mobile Troubleshooter Backend
# Copy this file to .env and fill in actual values

# Server
PORT=3000

# AI Provider
AI_API_KEY=<<AI_API_KEY>>

# WooCommerce / WordPress
WOOCOMMERCE_URL=<<WOOCOMMERCE_URL>>
WOOCOMMERCE_CONSUMER_KEY=<<WOOCOMMERCE_CONSUMER_KEY>>
WOOCOMMERCE_CONSUMER_SECRET=<<WOOCOMMERCE_CONSUMER_SECRET>>
WOOCOMMERCE_WEBHOOK_SECRET=<<WOOCOMMERCE_WEBHOOK_SECRET>>

# Database (example: PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=<<DB_USER>>
DB_PASSWORD=<<DB_PASSWORD>>
DB_NAME=<<DB_NAME>>

# In-App Purchase (IAP) / Play Store
PACKAGE_NAME=<<PACKAGE_NAME>>
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=<<PATH_TO_SERVICE_ACCOUNT_JSON_OR_INLINE_JSON>>

# Apple IAP
APPLE_SHARED_SECRET=<<APPLE_SHARED_SECRET>>
